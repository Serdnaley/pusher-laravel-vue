<IfModule mod_rewrite.c>

    RewriteEngine On

    RewriteCond %{SERVER_PORT} !^443$
    RewriteRule .* https://%{SERVER_NAME}%{REQUEST_URI} [R=301,L]

    RewriteCond %{REQUEST_URI} ^api
    RewriteRule ^(.*)$ server/public/$1 [L]

    RewriteCond %{REQUEST_URI} !^api
    RewriteRule ^(.*)$ client/dist/$1 [L]

</IfModule>
